        config AUTODRIVE_FRONT_CENTER_THRESHOLD
            int "front center"
            default 420
        config AUTODRIVE_FRONT_LATERAL1_THRESHOLD
            int "front lateral 1"
            default 420
        config AUTODRIVE_FRONT_LATERAL2_THRESHOLD
            int "front lateral 2"
            default 420
        config AUTODRIVE_SIDE_CENTER_THRESHOLD
            int "side center"
            default 250
