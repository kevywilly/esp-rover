        config TOF0_XSHUT
             int "tof0 xshut"
             default 14
        config TOF1_XSHUT
            int "tof1 xshut"
            default 26
        config TOF2_XSHUT
            int "tof2 xshut"
            default 25
        config TOF3_XSHUT
            int "tof3 xshut"
            default 18
        config TOF4_XSHUT
            int "tof3 xshut"
            default 19
    endmenu

    menu "PWM Config"
        config M0_PWM
               int "Motor 0 PWM pin"
               default 23
        config M1_PWM
                int "Motor 1 PWM Pin"
                default 27
        config M2_PWM
                int "Motor 2 PWM Pin"
                default 22
        config M3_PWM
